<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import cz.stechy.drd.widget.EnumComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cz.stechy.drd.app.hero.creator.HeroCreatorController1">
  <top>
    <HBox styleClass="title-container">
      <Label styleClass="title-label" text="%drd_guide_new_hero_1_title" HBox.hgrow="ALWAYS"/>
    </HBox>
  </top>
  <center>
    <HBox spacing="16" styleClass="separator-line, line-bottom">
      <VBox alignment="CENTER" spacing="16.0">
        <JFXTextField fx:id="txtName" labelFloat="true" minWidth="150.0"
          promptText="%drd_hero_name">
          <padding>
            <Insets left="8.0" right="8.0" top="10.0"/>
          </padding>
        </JFXTextField>
        <EnumComboBox fx:id="cmbConviction" enumType="cz.stechy.drd.model.entity.Conviction"
          labelFloat="true" minWidth="150.0" promptText="%drd_hero_conviction"/>
        <EnumComboBox fx:id="cmbRace" enumType="cz.stechy.drd.model.entity.hero.Hero$Race"
          labelFloat="true" minWidth="150.0" promptText="%drd_hero_race"/>
        <EnumComboBox fx:id="cmbProfession"
          enumType="cz.stechy.drd.model.entity.hero.Hero$Profession" labelFloat="true"
          minWidth="150.0" promptText="%drd_hero_profession"/>
      </VBox>
      <JFXTextArea fx:id="txtDescription" labelFloat="true" minHeight="100.0" prefHeight="100.0"
        promptText="%drd_hero_description" HBox.hgrow="ALWAYS"/>
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="16.0"/>
      </padding>
    </HBox>
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="8">
      <JFXButton onAction="#handleCancel" styleClass="btn, btn-warning" text="%drd_cancel">
        <tooltip>
          <Tooltip text="%drd_cancel"/>
        </tooltip>
      </JFXButton>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton onAction="#handleReset" styleClass="btn, btn-danger" text="%drd_reset">
        <tooltip>
          <Tooltip text="%drd_reset"/>
        </tooltip>
      </JFXButton>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton fx:id="btnNext" onAction="#handleNext" styleClass="btn, btn-info" text="%drd_next">
        <tooltip>
          <Tooltip text="%drd_next"/>
        </tooltip>
      </JFXButton>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </HBox>
  </bottom>
</BorderPane>
