<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.stechy.drd.controller.main.MainController">
  <MenuBar>
    <Menu fx:id="menuFile" text="%drd_main_menu_file">
      <MenuItem fx:id="menuNewHero" onAction="#handleMenuNewHero" text="%drd_main_menu_file_new_hero">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/new.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuLoadHero" onAction="#handleMenuLoadHero" text="%drd_main_menu_file_load_hero">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/open.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuExportHero" onAction="#handleExportHero" text="%drd_main_menu_file_export_hero">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/export.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuImportHero" onAction="#handleImportHero" text="%drd_main_menu_file_import_hero">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/import.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuCloseHero" onAction="#handleMenuCloseHero" text="%drd_main_menu_file_close_hero">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/close_hero.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <SeparatorMenuItem />
      <MenuItem fx:id="menuLogin" onAction="#handleMenuLogin" text="%drd_main_menu_file_login">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/login.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <SeparatorMenuItem />
      <MenuItem fx:id="menuCloseProgram" onAction="#handleCloseApplication" text="%drd_main_menu_file_close_program">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/close.png" />
          </ImageView>
        </graphic>
      </MenuItem>
    </Menu>
    <Menu fx:id="menuTools" text="%drd_main_menu_tools">
      <MenuItem fx:id="menuDice" onAction="#handleMenuDice" text="%drd_main_menu_tools_dice">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/dice.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="mnuMoney" onAction="#handleMenuMoney" text="%drd_main_menu_tools_money" />
      <MenuItem fx:id="menuBestiary" onAction="#handleMenuBestiary" text="%drd_main_menu_tools_bestiary">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/bestiary.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuShop" onAction="#handleMenuShop" text="%drd_main_menu_tools_shop">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/shop.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuFight" onAction="#handleMenuFight" text="%drd_main_menu_tools_fight">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/fight.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <SeparatorMenuItem/>
      <MenuItem fx:id="menuSettings" onAction="#handleMenuSettings" text="%drd_settings">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/settings.png"/>
          </ImageView>
        </graphic>
      </MenuItem>
    </Menu>
    <Menu fx:id="menuHelp" text="%drd_main_menu_help">
      <MenuItem fx:id="menuAbout" onAction="#handleMenuAbout" text="%drd_main_menu_help_about">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/about.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuChangelog" onAction="#handleMenuChangelog" text="%drd_main_menu_help_changelog">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/changelog.png" />
          </ImageView>
        </graphic>
      </MenuItem>
      <MenuItem fx:id="menuHelp2" onAction="#handleMenuHelp" text="%drd_main_menu_help">
        <graphic>
          <ImageView>
            <Image requestedHeight="16" requestedWidth="16" url="@../../images/icon/help.png" />
          </ImageView>
        </graphic>
      </MenuItem>
    </Menu>
  </MenuBar>
  <ToolBar styleClass="jfx-tool-bar">
    <JFXButton fx:id="btnNewHero" onAction="#handleMenuNewHero" styleClass="toolbar-button, icon-new">
      <tooltip>
        <Tooltip text="%drd_main_menu_file_new_hero" />
      </tooltip>
    </JFXButton>
    <JFXButton fx:id="btnLoadHero" onAction="#handleMenuLoadHero" styleClass="toolbar-button, icon-open">
      <tooltip>
        <Tooltip text="%drd_main_menu_file_load_hero" />
      </tooltip>
    </JFXButton>
    <JFXButton fx:id="btnCloseHero" onAction="#handleMenuCloseHero" styleClass="toolbar-button, icon-close-hero">
      <tooltip>
        <Tooltip text="%drd_main_menu_file_close_hero" />
      </tooltip>
    </JFXButton>
    <Separator />
    <JFXButton fx:id="btnDice" onAction="#handleMenuDice" styleClass="toolbar-button, icon-dice">
      <tooltip>
        <Tooltip text="%drd_main_menu_tools_dice" />
      </tooltip>
    </JFXButton>
    <JFXButton fx:id="btnBestiary" onAction="#handleMenuBestiary" styleClass="toolbar-button, icon-bestiary">
      <tooltip>
        <Tooltip text="%drd_main_menu_tools_bestiary" />
      </tooltip>
    </JFXButton>
    <JFXButton fx:id="btnShop" onAction="#handleMenuShop" styleClass="toolbar-button, icon-shop">
      <tooltip>
        <Tooltip text="%drd_main_menu_tools_shop" />
      </tooltip>
    </JFXButton>
    <Separator />
    <Region HBox.hgrow="ALWAYS" />
    <JFXButton fx:id="btnLevelUp" onAction="#handleMenuLevelUp" styleClass="toolbar-button, icon-add">
      <tooltip>
        <Tooltip text="%drd_hero_level_up" />
      </tooltip>
    </JFXButton>
  </ToolBar>
  <JFXTabPane side="BOTTOM" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
    <Tab fx:id="tabDefaults" text="%drd_main_tab_dashboard">
      <tooltip>
        <Tooltip text="Základní informace o hrdinovi" />
      </tooltip>
      <fx:include fx:id="defaultStaff" source="default_staff.fxml" />
    </Tab>
    <Tab fx:id="tabInventory" text="%drd_main_tab_inventory">
      <fx:include fx:id="inventory" source="inventory.fxml" />
      <tooltip>
        <Tooltip text="Inventář hrdiny" />
      </tooltip>
    </Tab>
    <Tab fx:id="tabProfession" text="%drd_hero_profession">
      <fx:include fx:id="profession" source="profession/profession.fxml"/>
      <tooltip>
        <Tooltip text="Schopnosti dle profese"/>
      </tooltip>
    </Tab>
  </JFXTabPane>
</VBox>
