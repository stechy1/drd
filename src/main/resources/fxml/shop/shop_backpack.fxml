<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<TableView fx:id="tableBackpacks" styleClass="shop-table"
  xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cz.stechy.drd.controller.shop.ShopBackpackController">
  <columnResizePolicy>
    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
  </columnResizePolicy>
  <columns>
    <TableColumn fx:id="columnImage" minWidth="60.0" prefWidth="60.0" maxWidth="60.0" text="%drd_item_image" sortable="false">
      <cellValueFactory>
        <PropertyValueFactory property="image" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnName" prefWidth="100.0" text="%drd_item_name">
      <cellValueFactory>
        <PropertyValueFactory property="name" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAuthor" prefWidth="100.0" text="%drd_item_author">
      <cellValueFactory>
        <PropertyValueFactory property="author" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnMaxLoad" minWidth="50.0" prefWidth="100.0" text="%drd_item_max_load">
      <cellValueFactory>
        <PropertyValueFactory property="maxLoad" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnWeight" minWidth="50.0" prefWidth="50.0" maxWidth="50.0" text="%drd_item_weight">
      <cellValueFactory>
        <PropertyValueFactory property="weight" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnPrice" minWidth="140.0" prefWidth="140.0" maxWidth="140.0" text="%drd_item_price">
      <cellValueFactory>
        <PropertyValueFactory property="price" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAmmount" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" text="%drd_item_ammount" sortable="false">
      <cellValueFactory>
        <PropertyValueFactory property="ammount" />
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAction" minWidth="200.0" prefWidth="200.0" maxWidth="200.0" text="%drd_shop_action" sortable="false"/>
  </columns>
</TableView>
