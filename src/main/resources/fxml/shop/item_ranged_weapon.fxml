<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import cz.stechy.drd.widget.EnumComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cz.stechy.drd.controller.shop.ItemWeaponRangedController">
  <top>
    <HBox styleClass="title-container">
      <Label fx:id="lblTitle" styleClass="title-label" HBox.hgrow="ALWAYS"/>
    </HBox>
  </top>
  <center>
    <VBox spacing="16.0">
      <HBox spacing="16.0" VBox.vgrow="ALWAYS">
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <JFXTextField labelFloat="true" promptText="%drd_item_name" fx:id="txtName"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_weapon_strength"
            fx:id="txtStrength"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_weapon_rampancy"
            fx:id="txtRampancy"/>
        </VBox>
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <JFXTextField labelFloat="true" promptText="%drd_item_weapon_ranged_range_low"
            fx:id="txtRangeLow"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_weapon_ranged_range_medium"
            fx:id="txtRangeMedium"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_weapon_ranged_range_long"
            fx:id="txtRangeLong"/>
        </VBox>
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <EnumComboBox labelFloat="true" promptText="%drd_item_weapon_mele_ranged_type"
            fx:id="cmbWeaponType"
            enumType="cz.stechy.drd.model.item.RangedWeapon$RangedWeaponType"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_weight" fx:id="txtWeight"/>
          <Hyperlink text="%drd_item_price" fx:id="lblPrice" onAction="#handleShowMoneyPopup"/>
          <JFXTextField labelFloat="true" promptText="%drd_item_stack_size" fx:id="txtStackSize"/>
        </VBox>
        <padding>
          <Insets top="8.0"/>
        </padding>
      </HBox>
      <HBox spacing="8.0" VBox.vgrow="NEVER">
        <StackPane>
          <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0"
            onMouseClicked="#handleSelectImage" pickOnBounds="true" preserveRatio="true"/>
          <Label fx:id="lblSelectImage" text="%drd_image_click_for_image" visible="true"/>
        </StackPane>
        <JFXTextArea fx:id="txtDescription" labelFloat="true" promptText="%drd_item_description"
          VBox.vgrow="ALWAYS"/>
      </HBox>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </VBox>
  </center>
  <bottom>
    <HBox prefHeight="50" styleClass="separator-line, line-top">
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton onAction="#handleFinish" prefHeight="34.0" styleClass="btn, btn-primary, btn-raised"
        text="%drd_finish"/>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </HBox>
  </bottom>
</BorderPane>
