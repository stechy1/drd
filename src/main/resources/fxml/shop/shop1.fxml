<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500" prefWidth="900"
  xmlns="http://javafx.com/javafx/8.0.121"
  fx:controller="cz.stechy.drd.controller.shop.ShopController1">
  <center>
    <Accordion fx:id="accodionShopContainer">
      <panes>
        <TitledPane text="%drd_item_type_weapon_mele" fx:id="paneWeaponMele">
          <fx:include source="shop_mele_weapon.fxml" fx:id="tableMeleWeapon"/>
        </TitledPane>
        <TitledPane text="%drd_item_type_weapon_ranged" fx:id="paneWeaponRanged">
          <fx:include source="shop_ranged_weapon.fxml" fx:id="tableRangedWeapon"/>
        </TitledPane>
        <TitledPane text="%drd_item_type_armor" fx:id="paneArmor">
          <fx:include source="shop_armor.fxml" fx:id="tableArmor"/>
        </TitledPane>
        <TitledPane text="%drd_item_type_general" fx:id="paneGeneral">
          <fx:include source="shop_general.fxml" fx:id="tableGeneral"/>
        </TitledPane>
        <TitledPane text="%drd_item_type_backpack" fx:id="paneBackpack">
          <fx:include source="shop_backpack.fxml" fx:id="tableBackpack"/>
        </TitledPane>
      </panes>
    </Accordion>
  </center>
  <right>
    <VBox prefWidth="50.0" spacing="8.0">
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="32.0"/>
      </padding>
      <JFXButton onAction="#handleAddItem" styleClass="sidebar-button, icon-add" fx:id="btnAddItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_add"/>
        </tooltip>
      </JFXButton>
      <JFXButton onAction="#handleRemoveItem" styleClass="sidebar-button, icon-subtract"
        fx:id="btnRemoveItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_remove"/>
        </tooltip>
      </JFXButton>
      <JFXButton onAction="#handleEditItem" styleClass="sidebar-button, icon-edit"
        fx:id="btnEditItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_edit"/>
        </tooltip>
      </JFXButton>
      <Separator />
      <JFXButton onAction="#handleUploadItem" styleClass="sidebar-button, icon-upload"
        fx:id="btnUploadItem">
        <tooltip>
          <Tooltip text="%drd_firebase_entry_upload"/>
        </tooltip>
      </JFXButton>
      <JFXButton onAction="#handleDownloadItem" styleClass="sidebar-button, icon-download"
        fx:id="btnDownloadItem">
        <tooltip>
          <Tooltip text="%drd_firebase_entry_download"/>
        </tooltip>
      </JFXButton>
      <JFXButton onAction="#handleRemoveOnlineItem" styleClass="sidebar-button, icon-remove-online"
        fx:id="btnRemoveOnlineItem">
        <tooltip>
          <Tooltip text="%drd_firebase_entry_remove"/>
        </tooltip>
      </JFXButton>
      <Separator />
      <JFXButton onAction="#handleSynchronize" styleClass="sidebar-button, icon-synchronize"
        fx:id="btnSynchronize">
        <tooltip>
          <Tooltip text="%drd_repository_item_synchronize"/>
        </tooltip>
      </JFXButton>
      <ToggleButton styleClass="sidebar-button, icon-online" fx:id="btnToggleOnline">
        <tooltip>
          <Tooltip text="%drd_repository_toggle_online_database"/>
        </tooltip>
      </ToggleButton>
    </VBox>
  </right>
  <bottom>
    <HBox prefHeight="50.0" spacing="8.0" styleClass="separator-line, line-top">
      <Label prefHeight="34.0" text="%drd_total_price"/>
      <Label prefHeight="34.0" fx:id="lblTotalPrice"/>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXToggleButton prefHeight="34.0" text="%drd_shop_edit_mode" fx:id="btnToggleEditMode"/>
      <Region HBox.hgrow="ALWAYS" layoutX="130.0" layoutY="18.0"/>
      <JFXButton disable="true" onAction="#handleContinueShopping" prefHeight="34.0"
        styleClass="btn, btn-primary, btn-raised" text="%drd_shop_continue_shopping"
        fx:id="btnContinueShopping"/>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </HBox>
  </bottom>
</BorderPane>
