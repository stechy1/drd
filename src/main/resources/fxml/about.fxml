<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Tooltip?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.121"
  fx:controller="cz.stechy.drd.controller.about.AboutController">
  <top>
    <HBox alignment="CENTER">
      <ImageView HBox.hgrow="NEVER" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
        preserveRatio="true">
        <image>
          <Image url="@../images/icon/wip.png"/>
        </image>
      </ImageView>
    </HBox>
  </top>
  <center>
    <VBox alignment="TOP_CENTER" spacing="8.0">
      <Label styleClass="title" text="%drd_main_title"/>
      <Label wrapText="true" text="%drd_about_content" textAlignment="CENTER"/>
      <TextFlow textAlignment="CENTER">
        <Label text="Aplikace je přihlášena do letní programátorské soutěže na "/>
        <Hyperlink text="ITnetwork" onAction="#handleShowBrowser">
          <tooltip>
            <Tooltip text="www.itnetwork.cz"/>
          </tooltip>
        </Hyperlink>
      </TextFlow>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </VBox>
  </center>
</BorderPane>
