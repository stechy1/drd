<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.121"
  fx:controller="cz.stechy.drd.controller.hero.creator.HeroCreatorController3">
  <top>
    <HBox styleClass="title-container">
      <Label HBox.hgrow="ALWAYS" styleClass="title-label" text="%drd_guide_new_hero_3_title"/>
    </HBox>
  </top>
  <center>
    <TableView fx:id="tableItems">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
        <TableColumn minWidth="50" styleClass="table-column" text="%drd_item_image"
          fx:id="columnImage">
          <cellValueFactory>
            <PropertyValueFactory property="image"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn minWidth="100.0" styleClass="table-column" text="%drd_item_name"
          fx:id="columnName">
          <cellValueFactory>
            <PropertyValueFactory property="name"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn minWidth="40.0" styleClass="table-column" text="%drd_item_ammount"
          fx:id="columnItemCount">
          <cellValueFactory>
            <PropertyValueFactory property="itemCount"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn minWidth="40.0" styleClass="table-column" text="%drd_item_weight"
          fx:id="columnWeight">
          <cellValueFactory>
            <PropertyValueFactory property="weight"/>
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>
  </center>
  <right>
    <VBox prefWidth="50.0" spacing="8.0">
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="32.0"/>
      </padding>
      <Button onAction="#handleAddItem" styleClass="sidebar-button, icon-add" fx:id="btnAddItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_add"/>
        </tooltip>
      </Button>
      <Button onAction="#handleRemoveItem" styleClass="sidebar-button, icon-subtract"
        fx:id="btnRemoveItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_remove"/>
        </tooltip>
      </Button>
    </VBox>
  </right>
  <bottom>
    <HBox alignment="CENTER_LEFT" styleClass="separator-line, line-top">
      <JFXButton onAction="#handleBack" styleClass="btn, btn-warning" text="%drd_back">
        <tooltip>
          <Tooltip text="%drd_back"/>
        </tooltip>
      </JFXButton>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton HBox.hgrow="ALWAYS" onAction="#handleReset"
        styleClass="btn, btn-danger" text="%drd_reset">
        <tooltip>
          <Tooltip text="%drd_reset"/>
        </tooltip>
      </JFXButton>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton onAction="#handleFinish" styleClass="btn, btn-raised, btn-primary" text="%drd_finish">
        <tooltip>
          <Tooltip text="%drd_finish"/>
        </tooltip>
      </JFXButton>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </HBox>
  </bottom>
</BorderPane>
